<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.amphenol.amphenol"
          android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- **********蒲公英sdk部分 -->
    <!-- 必选 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 网络通信 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 获取MAC地址 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 读写sdcard，storage等等 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!-- 允许程序录制音频 -->
    <!-- ********** -->

    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:name="com.amphenol.PgyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/splash_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.amphenol.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Notitle.FullScreen"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.amphenol.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.MenuActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.PurchaseReceiptActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.ScanActivity"
            android:allowBackup="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Notitle.FullScreen"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.CreateRequisitionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.SystemSetUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.WareHouseSetUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.FastRequisitionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.CheckRequisitionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.StockSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.HairMaterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.ProductionStorageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.ProductionInquireActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.amphenol.activity.PrintMaterLabelActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <!-- *********蒲公英配置部分 -->
        <meta-data
            android:name="PGYER_APPID"
            android:value="08b9b62f516c5d04bda1e44e969988b5"/>
        <!-- ************ -->
    </application>

</manifest>