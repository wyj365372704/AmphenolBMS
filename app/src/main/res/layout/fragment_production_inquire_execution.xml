<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓库:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_warehouse_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_department_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_order_number_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_order_state_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名称:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_name_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品描述:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_desc_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品规格:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_form_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_ordered_quantity_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完工数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_finished_quantity_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_remain_quantity_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划开始日期:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_plan_start_date_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划完成日期:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_plan_finish_date_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际开始日期:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_actual_start_date_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>