<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="采购入库"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/fragment_purchas_receipt_second_ll_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <Button
            android:id="@+id/fragment_fast_requisition_main_submit_bt"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/negative_button_background"
            android:text="确认入库"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/fragment_fast_requisition_main_add_branch_bt"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/positive_button_background"
            android:text="拍照上传"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/fragment_fast_requisition_main_cancel_bt"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/positive_button_background"
            android:text="关闭入库"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_purchas_receipt_second_ll_bt"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlbh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="物料编号:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>


                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlbh_in_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_wlbh_tv"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlms_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="物料描述:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlms_in_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_wlms_tv"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_cgdw_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/fragment_purchase_receipt_second_cgdw_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_cgdw_tv"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_pcgk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:gravity="center_vertical"
                    android:text="批次管控:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_pcgk_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_pcgk_tv"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_cgdw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="采购单位:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_jhsl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:text="计划总数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_jhsl_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_jhsl_tv"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shkw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:gravity="center_vertical"
                    android:text="入库库位:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <EditText
                    android:id="@+id/fragment_purchase_receipt_second_shkw_et"
                    style="@style/NormalTheme.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shkw_tv"
                    android:hint="输入入库库位"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">


                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sszh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:text="实收总数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sszs_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sszh_tv"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sszs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:text="入库总数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <EditText
                    android:id="@+id/fragment_purchase_receipt_second_sszs_in_et"
                    style="@style/NormalTheme.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sszs_tv"
                    android:hint="输入入库总数"
                    android:inputType="numberDecimal"
                    android:padding="0dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sjdz_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="实际单重:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <EditText
                    android:id="@+id/fragment_purchase_receipt_second_sjdz_in_et"
                    style="@style/NormalTheme.EditText"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sjdz_tv"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sjdzdw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sjdz_in_et"
                    android:text="--"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzzl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="180dp"
                    android:gravity="center"
                    android:text="入库总重量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzzl_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shzzl_tv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shzzl_in_tv"
                    android:gravity="center"
                    android:text="KG"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

