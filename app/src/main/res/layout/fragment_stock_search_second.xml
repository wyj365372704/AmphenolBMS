<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="物料明细"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="物料编码:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_create_requisition_second_mater_number_tv"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="--"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="物料描述:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_create_requisition_second_mater_desc_tv"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="--"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="物料规格:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_create_requisition_second_mater_format_tv"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="--"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="批次号码:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_create_requisition_second_branch_number_tv"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:text="--"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="当前库存:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fragment_create_requisition_second_quantity_tv"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="库存单位:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fragment_create_requisition_second_unity_tv"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="当前子库:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fragment_create_requisition_second_current_shard_tv"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="当前库位:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fragment_create_requisition_second_current_location_tv"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

