<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="采购收货"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/toolbar_menu"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center|right"
            android:padding="16dp"
            android:src="@mipmap/icon_action_bar_menu" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlbh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="物料编号:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />


                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlbh_in_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_wlbh_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_pcgk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:text="批次管控:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_pcgk_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_pcgk_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlms_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="物料描述:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlms_in_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_wlms_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_zj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_zj_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_zj_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:text="收货子库:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzk_in_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shzk_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_cgdw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="采购单位:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_cgdw_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/fragment_purchase_receipt_second_cgdw_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_cgdw_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shkw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:text="收货库位:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_purchase_receipt_second_shkw_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shkw_tv"
                    android:background="@drawable/spinner_back"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sjdz_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="实际单重:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_purchase_receipt_second_sjdz_in_et"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sjdz_tv"
                    android:background="@drawable/spinner_back"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sjdzdw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:text="--"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sjdz_in_et"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_sszs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:text="实收总数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_purchase_receipt_second_sszs_in_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_sszs_tv"
                    android:background="@drawable/spinner_back"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_jhsl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_jhsl_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_jhsl_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzzl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:text="收货总重量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzzl_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shzzl_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shzzl_in_tv"
                    android:text="KG"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDevideLine" />
            </LinearLayout>
            <include
                layout="@layout/pruchase_receipt_second_item_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_purchase_receipt_second_content_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

