<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业号:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_warehouse_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产订单号:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_department_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工序:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_order_number_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产线:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_order_state_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_name_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产部门:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_desc_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_form_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>