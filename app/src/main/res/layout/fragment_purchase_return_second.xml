<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="退货"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlbh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="物料编号:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>


                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlbh_in_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_wlbh_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_pcgk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:text="退货子库:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <Spinner
                    android:id="@+id/fragment_create_requisition_main_shard_spinner"
                    style="@style/NormalTheme.EditText"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_pcgk_tv"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlms_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="物料描述:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_wlms_in_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_wlms_tv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_jhsl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退货数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_jhsl_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_jhsl_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzzl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:text="已选数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/fragment_purchase_receipt_second_shzzl_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_purchase_receipt_second_shzzl_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size"/>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/fragment_fast_requisition_main_submit_bt"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/negative_button_background"
                android:text="确认退货"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/fragment_fast_requisition_main_cancel_bt"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:background="@drawable/positive_button_background"
                android:text="关闭退货"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorDevideLine"/>

        <include
            layout="@layout/pruchase_return_second_item_head"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_purchase_receipt_second_content_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>

