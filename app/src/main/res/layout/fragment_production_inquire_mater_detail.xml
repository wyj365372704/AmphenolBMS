<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料编号:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_mater_mater_number_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料名称:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_mater_mater_name_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划用量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_mater_plan_usage_quantity_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际用量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_mater_actual_usage_quantity_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近发料时间:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_mater_last_hair_mater_date_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>