<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="46dp"
              android:gravity="center"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/fragment_hair_mater_second_return_body_branch_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="--"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />


    <TextView
        android:id="@+id/fragment_hair_mater_second_return_body_quantity_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="--"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/purchase_receipt_second_item_close_iv"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:src="@mipmap/icon_delet" />
    </LinearLayout>
</LinearLayout>