<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/fragment_create_requisition_create_bt"
    android:layout_below="@id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_mater_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="物料编号:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_mater_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_create_requisition_main_warehouse_tv"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="物料描述:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_desc_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_create_requisition_main_warehouse_tv"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_plain_quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="计划数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_plain_quantity_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_create_requisition_main_warehouse_tv"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_unit_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_create_requisition_main_warehouse_tv"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_hair_quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="发料数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_hair_mater_second_one_hair_quantity_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fragment_create_requisition_main_warehouse_tv"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/fragment_fast_requisition_main_inquire_bt"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/positive_button_background"
                android:text="发料过账"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_fast_requisition_main_submit_bt"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/negative_button_background"
                android:text="终止过账"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorDevideLine" />

        <include
            layout="@layout/hair_mater_mater_list_second_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_purchase_receipt_content_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
