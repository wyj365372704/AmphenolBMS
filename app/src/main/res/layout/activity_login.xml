<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="环境"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_font_size" />

        <Spinner
            android:id="@+id/activity_login_env_sp"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            style="@style/NormalTheme.EditText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/activity_login_username_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="用户名"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_font_size" />

        <EditText
            android:id="@+id/activity_login_username_et"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:height="32dp"
            android:gravity="center_vertical"
            style="@style/NormalTheme.EditText"
            android:text="ADMIN" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="密码"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_font_size" />

        <EditText
            android:id="@+id/activity_login_password_et"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            style="@style/NormalTheme.EditText"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:text="123456" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_login_bt"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="登录"
        android:textStyle="bold"
        android:background="@drawable/login_button_background"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font_size" />
</LinearLayout>
