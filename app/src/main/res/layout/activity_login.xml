<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/splash_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="环境"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"/>

            <Spinner
                android:id="@+id/activity_login_env_sp"
                style="@style/NormalTheme.EditText"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_login_username_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="用户名"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"/>

            <EditText
                android:id="@+id/activity_login_username_et"
                style="@style/NormalTheme.EditText"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:height="32dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="密码"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"/>

            <EditText
                android:id="@+id/activity_login_password_et"
                style="@style/NormalTheme.EditText"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:id="@+id/activity_login_bt"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_button_background"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_font_size"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>

