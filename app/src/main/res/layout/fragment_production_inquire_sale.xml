<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_warehouse_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户代码:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_department_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户采购订单号:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_order_number_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_order_state_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完工数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_name_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出货数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_desc_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余数量:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_product_form_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/NormalTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="承诺日期:"/>

            <TextView
                android:id="@+id/fragment_production_inquire_execution_ordered_quantity_tv_in"
                style="@style/NormalTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>