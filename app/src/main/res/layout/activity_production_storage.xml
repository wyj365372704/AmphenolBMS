<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="生产入库"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/fragment_scan_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/scan" />


        <EditText
            android:id="@+id/purchase_receipt_main_code_et"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/spinner_back"
            android:ellipsize="end"
            android:hint="输入工单号"
            android:imeOptions="actionDone"
            android:padding="2dp"
            android:singleLine="true"
            android:textSize="@dimen/normal_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/fragment_fast_requisition_main_inquire_bt"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/positive_button_background"
            android:text="查询"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_fast_requisition_main_submit_bt"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/negative_button_background"
            android:text="入库"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorDevideLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产订单号:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/fragment_create_requisition_second_mater_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品描述:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/fragment_create_requisition_second_mater_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/activity_production_storage_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="批号:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_fast_requisition_main_from_branch_et"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/spinner_back"
                    android:singleLine="true"
                    android:hint="输入批号"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_create_requisition_second_quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已入库数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_create_requisition_second_unity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fragment_create_requisition_second_current_shard_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每箱数量:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_fast_requisition_main_from_meixiangshuliang_et"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:background="@drawable/spinner_back"
                    android:singleLine="true"
                    android:hint="输入每箱数量"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="箱数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_fast_requisition_main_from_xiangshu_et"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:background="@drawable/spinner_back"
                    android:singleLine="true"
                    android:hint="输入箱数"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尾数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_fast_requisition_main_from_weishu_et"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:background="@drawable/spinner_back"
                    android:singleLine="true"
                    android:hint="输入尾数"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总数:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/activity_production_storage_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仓库:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/activity_production_storage_warehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="子库:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />
                <Spinner
                    android:id="@+id/fragment_fast_requisition_main_shard_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/spinner_back"
                    android:singleLine="true"
                    android:layout_marginRight="24dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库位:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

                <EditText
                    android:id="@+id/fragment_fast_requisition_main_from_shard_et"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/spinner_back"
                    android:singleLine="true"
                    android:hint="输入库位编号"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>