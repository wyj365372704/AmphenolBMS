<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp">

    <TextView
        android:id="@+id/purchase_receipt_add_branch_pch_tv"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:gravity="center|right"
        android:text="批次号:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size"/>

    <EditText
        android:id="@+id/purchase_receipt_add_branch_pch_et"
        style="@style/NormalTheme.EditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/purchase_receipt_add_branch_pch_tv"/>

    <TextView
        android:id="@+id/purchase_receipt_add_branch_sssl_tv"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@id/purchase_receipt_add_branch_pch_tv"
        android:layout_marginTop="16dp"
        android:gravity="center|right"
        android:text="实收数量:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size"/>

    <EditText
        android:id="@+id/purchase_receipt_add_branch_sssl_et"
        style="@style/NormalTheme.EditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/purchase_receipt_add_branch_sssl_tv"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/purchase_receipt_add_branch_sssl_tv"
        android:inputType="numberDecimal"/>


</RelativeLayout>