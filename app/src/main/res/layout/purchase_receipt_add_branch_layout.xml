<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/purchase_receipt_add_branch_pch_tv"
        android:layout_width="70dp"
        android:text="批次号:"
        android:textSize="@dimen/normal_font_size"
        android:textColor="@android:color/black"
        android:gravity="center|right"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/purchase_receipt_add_branch_pch_et"
        android:layout_marginLeft="8dp"
        android:layout_width="200dp"
        android:background="@drawable/spinner_back"
        android:textSize="@dimen/normal_font_size"
        android:padding="4dp"
        android:layout_toRightOf="@id/purchase_receipt_add_branch_pch_tv"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/purchase_receipt_add_branch_sssl_tv"
        android:layout_width="70dp"
        android:layout_below="@id/purchase_receipt_add_branch_pch_tv"
        android:text="实收数量:"
        android:textSize="@dimen/normal_font_size"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:gravity="center|right"
        android:layout_height="40dp"/>

    <EditText
        android:id="@+id/purchase_receipt_add_branch_sssl_et"
        android:layout_marginLeft="8dp"
        android:layout_width="200dp"
        android:background="@drawable/spinner_back"
        android:padding="4dp"
        android:inputType="numberDecimal"
        android:textSize="@dimen/normal_font_size"
        android:layout_alignTop="@id/purchase_receipt_add_branch_sssl_tv"
        android:layout_toRightOf="@id/purchase_receipt_add_branch_sssl_tv"
        android:layout_height="40dp" />


</RelativeLayout>