<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTableM"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <TextView
        android:id="@+id/purchase_receipt_second_item_location_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="库位"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />
    <TextView
        android:id="@+id/purchase_receipt_second_item_cgdxc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="生产批次"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/purchase_receipt_second_item_wl_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="计划数量"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/purchase_receipt_second_item_sl_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="退货数量"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_font_size" />
</LinearLayout>